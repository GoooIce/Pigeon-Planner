{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "error"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "target",
    "src-tauri",
    "*.config.js",
    "*.config.ts"
  ]
}